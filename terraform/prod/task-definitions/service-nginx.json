[
  {
    "name": "nginx-prod",
    "image": "780172389235.dkr.ecr.eu-west-1.amazonaws.com/ppv-prod-nginx:latest",
    "cpu": 300,
    "memory": 70,
    "essential": true,
    "mountPoints": [
      {
        "sourceVolume": "letsencrypt",
        "containerPath": "/etc/letsencrypt"
      },
      {
        "sourceVolume": "ppv-app",
        "containerPath": "/var/www/html/ppv"
      },
      {
        "sourceVolume": "ppv-website",
        "containerPath": "/var/www/html/ppv-web"
      }
    ],
    "hostname": "ppv-prod-nginx",
    "portMappings": [
      {
        "containerPort": 80,
        "hostPort": 80
      },
      {
        "containerPort": 443,
        "hostPort": 443
      }
    ],
    "environment": [
      {
        "name": "DOMAINS",
        "value": "peculiarppv.com,www.peculiarppv.com"
      }
    ],
    "logConfiguration": {
      "logDriver": "fluentd",
      "options": {
        "fluentd-address": "logs.prod.mettalloids.com:24224",
        "tag": "docker.ppv.nginx.prod"
      }
    }
  }
]